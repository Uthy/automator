{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "ES6",
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
        "@/*": [
            "./src/*"
        ]
    }
  },
  "types": [
    "node",
    "jest",
    "@testing-library/jest-dom"
  ],
  "include": [
    "*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "./dist/**/*",
    "./reports",
    "./node_modules",
  ]
}