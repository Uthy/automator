{
  "name": "Topbar Automator",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Cool description loading..",
  "devtools_page": "devtools.html",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": ["https://*/*"],
  "icons": {
    "16": "assets/16x16.png",
    "24": "assets/24x24.png",
    "32": "assets/32x32.png",
    "128": "assets/128x128.png"
  },
  "background": {
    "service_worker": "background.bundle.js"
  }
}